           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="MolkMurders.Views.Settings"
           CanBeDismissedByTappingOutsideOfPopup="False">
    <VerticalStackLayout>
        <Button 
            x:Name="CloseBtn"
            Text="X"
